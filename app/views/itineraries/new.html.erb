<div class="col-md-12">
    <div class="row">

        <div class="ccol-xs-4 col-xs-offset-4 animated slideInLeft">
            <div class="boxes ripplelink">
                <h2>New Itinerary</h2>
                <%= form_for [@user, @itinerary] do |t| %>
                <div class="form-group">
                    <%= t.text_field :title, placeholder: "Title", class: "form-control"  %><br>
                </div>
                <div class="form-group">
                    <%= t.text_field :description, placeholder: "Description", class: "form-control"  %><br>
                </div>
                <div class="form-group">
                    <%= t.text_field :cover, placeholder: "Cover", class: "form-control"  %><br>
                </div>

                <hr>
                <div class="form-group">
                    <%= t.submit "Save", class: "btn btn-default" %>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>