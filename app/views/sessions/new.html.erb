
<div class="col-md-12">
    <div class="row">
        <div class="col-xs-4 col-xs-offset-4">
            <div class="boxes">
            <h1 class="signloghead">Log In</h1>
            <%= form_for :user, url: sessions_path do |f| %>
            <div class="form-group">
                <%= f.text_field :email, placeholder: "Email", class: "form-control"  %><br>
            </div>
            <div class="form-group">
                <%= f.password_field :password, placeholder: "Password", class: "form-control"  %><br>
            </div>
           
            <div class="form-group">
                <center><%= f.submit "Log In", class: "btn btn-default" %></center>
            </div>
            <% end %>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
