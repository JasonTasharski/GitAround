<div class="row">
  <div class="col-xs-4 col-xs-offset-4">
    <div class="boxes">
      <h1 class="signloghead">Sign Up</h1>
      
      <%= form_for @user, :validate => true, :url => users_path, :html => { :multipart => true } do |f| %>
        <div class="form-group">
          <%= f.email_field :email, placeholder: "Email", class: "form-control", :required => true %>
        </div><br>
        <div class="form-group">
          <%= f.text_field :username, placeholder: "Username", class: "form-control", :required => true %>
        </div><br>
        <div class="form-group">
          <%= f.password_field :password, placeholder: "Password Requires 6 characters", class: "form-control", :required => true %><br>
        </div>
         <div class="form-group">
          <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class: "form-control", required: true %>
        </div>

          <br>Add a photo:<br> <%= f.file_field :avatar, required: false %><br>
          <center><%= f.submit "Sign Up", class: "btn btn-default" %></center>
        <% end %>
      </div>
    </div>
  </div>
</div>
